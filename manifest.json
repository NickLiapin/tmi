{
  "manifest_version": 3,
  "name": "The magic inserter",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "clipboardWrite",
    "clipboardRead",
    "storage",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
